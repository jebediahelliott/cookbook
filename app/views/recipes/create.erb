<h1>New Recipe</h1>
<form action="/recipes" method="post">
  <label for="recipe[name]">Name:</label>
  <input type="text" name="recipe[name]"><br>
  <% 10.times do %>
    <label for="recipe[ingredients][][name]">Ingredient:</label>
    <input type="text" name="recipe[ingredients][][name]"><br>
    <label for="recipe[ingredient_amount]">Amount</label>
    <input type="text" name="recipe[ingredient_amount]">
    <label for="recipe[ingredients][][unit]">Unit:</label>
    <input type="text" name="recipe[ingredients][][unit]">
  <%end%>
</form>

<h1>Edit <%= @recipe.name %></h1>
<form action="/recipes/<%= @recipe.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="recipe[name]">Name:</label>
  <input type="text" name="recipe[name]" value="<%= @recipe.name %>"><br>
  <% @recipe.ingredients.each do |ingredient| %>
    <label for="ingredients[][name]">Ingredient:</label>
    <input type="text" name="ingredients[][name]" value="<%= ingredient.name %>">
    <label for="amounts[][ingredient_amount]">Amount</label>
    <input type="text" name="amounts[][ingredient_amount]" value="<%= ingredient.amounts[0].ingredient_amount %>">
    <label for="ingredients[][unit]">Unit:</label>
    <input type="text" name="ingredients[][unit]" value="<%= ingredient.unit %>"><br>
  <%end%>
  <label for="recipe[method]">Method</label><br>
  <textarea rows="10" columns="50" name="recipe[method]"><%= @recipe.method %></textarea><br>
  <label for="recipe[notes]">Notes</label><br>
  <textarea rows="5" columns="50" name="recipe[notes]"><%= @recipe.notes %></textarea><br>
  <input type="submit">
